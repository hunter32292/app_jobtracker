<%= form_for(@events) do |f| %>
	<%= render 'shared/error_messages', :object=> f.object %>
<div class="field">

	<%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :date %>
  <%= f.date_field :data, :placeholder=> "Please use the YYYY/MM/DD format" %>
	
	<%= f.label :end_date %>
	<%= f.date_field :end_date, :placeholder => "Please use the YYYY/MM/DD format" %>

	<%= f.label :summary %>
	<%= f.text_field :summary %>

<%= f.submit "submit", :class=> "btn btn-large btn-primary" %>
<% end %>




